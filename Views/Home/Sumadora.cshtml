<h1>Sumadora</h1>

<form method="post">
    <div class="form-group">
        <label for="num1">Primer Número</label>
        <input type="number" class="form-control" name="num1" required placeholder="2">
    </div>
    <div class="form-group">
        <label for="num2">Segundo Número</label>
        <input type="number" class="form-control" name="num2" required placeholder="2">
    </div>
    <button type="submit" class="btn btn-primary" asp-action="Sumadora">Sumar</button>

    <hr />

    <div class="form-group">
        <h2>El resultado es @ViewBag.Resultado</h2>
    </div>
</form>